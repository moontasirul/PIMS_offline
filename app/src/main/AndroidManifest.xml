<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.moon.pimsnewoffline"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.IntroActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LogInActivity"
            android:label="@string/app_login"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.Main2Activity"
            android:label="@string/title_activity_main2"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".activity.PatientList"
            android:label="@string/title_Patient_list"
            android:launchMode="singleTop"/>

        <activity
            android:name=".activity.UserProfile"
            android:label="@string/title_Doctor_pro"
            android:launchMode="singleTop" />

        <activity android:name=".activity.AddPatient"
            android:label="@string/title_Add_patients"
            android:launchMode="singleTop"/>

        <activity android:name=".activity.Report"
            android:label="@string/title_Patient_report"
            android:launchMode="singleTop">

        </activity>
    </application>

</manifest>